@page
@model LIMS.EmployeeModel
@{
    ViewData["Title"] = "Employee";
}

@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery AntiForgery;

<div class="container w-100">
    <div class="row d-flex justify-content-center">
        <div class="d-flex col-6 mb-1">
            <ul class="list-group">
                <li id="checkout-header" class="list-group-item list-group-item-warning">
                    Checkout Book
                </li>
                <li id="checkout" class="list-group-item">
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="bookId">Book ID</label>
                            <input type="number" class="form-control" id="bookId" placeholder="10">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" id="username" placeholder="User123">
                        </div>
                        <div class="form-group col-md">
                            <label for="submit" class="text-white">Submit</label>
                            <button class="btn btn-outline-success">Submit</button>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>